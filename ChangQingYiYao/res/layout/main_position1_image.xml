<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="vertical">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
		    <ImageButton 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="#00000000"
		        android:src="@drawable/main_find"/>
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:text="寻找"/>
		</LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
		    <ImageButton 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="#00000000"
		        android:src="@drawable/main_man"/>
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:text="男性"/>
		</LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
		    <ImageButton 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="#00000000"
		        android:src="@drawable/main_women"/>
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:text="女性"/>
		</LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
		    <ImageButton 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="#00000000"
		        android:src="@drawable/main_mine"/>
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:text="我的"/>
		</LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
		    <ImageButton 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="#00000000"
		        android:src="@drawable/main_tonic"/>
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:text="慢病"/>
		</LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
		    <ImageButton 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="#00000000"
		        android:src="@drawable/main_chronic"/>
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:text="滋补"/>
		</LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
		    <ImageButton 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="#00000000"
		        android:src="@drawable/main_doctor"/>
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:text="医生"/>
		</LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
		    <ImageButton 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="#00000000"
		        android:src="@drawable/main_favor"/>
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:text="分类"/>
		</LinearLayout>
    </LinearLayout>
</LinearLayout>
