<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin = "4dp"
    android:orientation="horizontal" >

    <CheckBox 
        android:id="@+id/cart_checkbox"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
    <ImageButton 
        android:id="@+id/cart_added_wares_image"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"/>
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/cart_added_wares_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="商品名称："/>
        <TextView 
            android:id="@+id/cart_added_wares_desc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="商品详情：xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx,xxxxxxxxx,xxxxxxxxxx."/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="￥"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:textColor="#ffff1111"/>
            <TextView 
                android:id="@+id/cart_added_wares_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="88.88"
                android:gravity="center"
                android:layout_marginLeft="4dp"/>
              
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:layout_marginRight="0dp">
	            <ImageButton 
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_gravity="bottom|right"
	                android:background="#00000000"
	                android:src="@android:drawable/ic_input_add"/>
	            <TextView 
	                android:id="@+id/cart_added_wares_amount"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:text="88"
	                android:layout_gravity="center"
	                android:gravity="center"
	                android:layout_marginLeft="2dp"/>
	            <ImageButton 
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_gravity="bottom|right"
	                android:background="#00000000"
	                android:src="@android:drawable/ic_input_add"/>
            </LinearLayout>
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>
